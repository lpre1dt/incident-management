{
  "name": "incident-management",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@sap/cds": "^9",
    "express": "^4",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9"
  },
  "devDependencies": {
    "@sap/ux-specification": "latest"
  },
  "scripts": {
    "start": "cds-serve",
    "watch": "cds watch",
    "build": "cds deploy --to sqlite:db.sqlite"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "db.sqlite"
        }
      },
      "auth": {
        "kind": "mocked"
      }
    }
  },
  "sapux": [
    "app/incidents",
    "app/customers"
  ]
}
